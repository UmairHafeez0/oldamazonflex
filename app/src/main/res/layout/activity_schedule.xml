<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="0dp">

    <!-- Grey background header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#2F3540"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Hamburger icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            app:tint="#FFFFFF" />

        <!-- Title centered -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Schedule"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Date line -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday, 6/30"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="12dp"
        android:textStyle="bold"
        android:background="#000000" />

    <!-- Schedule card block -->
    <!-- Schedule card block -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/item_border3"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:elevation="2dp"
        android:clipToPadding="false"> <!-- This allows the divider to extend beyond padding -->

        <!-- Top row with location and status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/locationText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Bronx NY (VNY2) -"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/infoIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_info"
                android:textColor="@color/white"
                android:contentDescription="Info" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scheduled to deliver"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Schedule type -->
        <TextView
            android:id="@+id/scheduleTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Same-Day"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Full-width divider (extends to card edges) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#606972"
            android:layout_marginLeft="-12dp"
            android:layout_marginRight="-12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Time and Pay row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/timeRangeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4:45 AM - 7:45 AM"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/payText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$130.50"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Duration text -->
        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 hr"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>