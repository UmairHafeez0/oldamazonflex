<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White top border (1dp height) -->
    <item android:top="0dp" android:left="-2dp" android:right="-2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#5d6268"/>
        </shape>
    </item>

    <!-- Main background color -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#212a2f"/>
        </shape>
    </item>
</layer-list>